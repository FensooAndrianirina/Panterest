{% extends 'layouts/partials/base.html.twig' %}

{% block title 'Log in!' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-3 text-center">Please sign in</h1>
            <p class="mb-5 text-center text-muted">Your pins are waiting for you.</p>
            <form method="post">
                {% if error %}
                    <div class="alert alert-error rounded mb-3" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-warning mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}" class="text-decoration-none">click here to log out</a>
                    </div>
                {% endif %}

                <div class="form-group">
                     <label for="email">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <div class="pt-2 d-flex justify-content-between">
                    <div class="checkbox mb-3">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                        <label class="form-check-label" for="remember_me"> 
                            Remember me
                        </label>
                    </div>  
                    <a href="{{path('app_forgot_password_request')}}" class="text-decoration-none"> Forgot password?  </a>
                </div> 

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" > 
            
                <div class="row p-3">
                    <button class="btn btn-primary btn-lg btn-block mt-2" type="submit">
                        Sign in
                    </button>
                </div>

                
                <p class="mt-5 mb-3 text-center text-muted"> 
                    Not registered yet? <a href="{{path('app_register')}}" class="text-decoration-none">Create an account</a> 
                </p>
            </form>
        </div>
    </div>
{% endblock %}
