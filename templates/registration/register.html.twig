{% extends 'layouts/partials/base.html.twig' %}

{% block title 'Register' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-3 text-center ">Create an account</h1>
            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>          
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <div class="row p-3">
                    <button type="submit" class="btn btn-primary btn-lg btn-block mt-2" formnovalidate>
                        Register
                    </button>
                </div>
            {{ form_end(registrationForm) }}

            <p class="mt-5 mb-3 text-center text-muted">
                Already have an account? 
                <a href="{{path('app_login')}}" class="text-decoration-none"> Log in</a>
            </p>
        </div>
    </div>
{% endblock %}
