{% extends 'layouts/partials/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-3 text-center">Reset your password</h1>

            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
            <div class="row p-1">
                <button class="mt-4 btn btn-primary btn-lg btn-block">Reset password</button>
            </div> 
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
